{
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "single"]
    },
    "env": {
        "browser": true,
        "node": true,
        "amd": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
        "showJSError": true
    },
    "extends": "eslint:recommended"
}
